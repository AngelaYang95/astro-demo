---
import {Button, type ButtonType} from '../components/Button';

interface Props {
    eyebrow?: string;
    heading?: string;
    subheading?: string;
    maxSubheadingWidth?: number;
    primaryCta?: ButtonType;
    secondaryCta?: ButtonType;
}

const {eyebrow, heading, subheading, maxSubheadingWidth = 800, primaryCta, secondaryCta} = Astro.props;
---
{eyebrow && <span class="eyebrow">{eyebrow}</span>}
{heading && <h2 class="heading">{heading}</h2>}
{subheading && <p class="subheading">{subheading}</p>}
<div class="ctaContainer">
    {primaryCta && <Button {...primaryCta} />}
    {secondaryCta && <Button {...secondaryCta} styleType="secondary" />}
</div>

<style define:vars={{ maxSubheadingWidth }}>
    .eyebrow {
        font-size: 16px;
        color: var(--color-text-secondary);
        margin-bottom: 8px;
    }
    .heading {
        font-size: 48px;
        margin-bottom: 16px;
    }
    .subheading {
        font-size: 20px;
        max-width: var(--maxSubheadingWidth, 800);
    }
    .ctaContainer {
        display: flex;
        margin-top: 24px;
        gap: 16px;
    }
</style>